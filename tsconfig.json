{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": ["es2015"],
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}
